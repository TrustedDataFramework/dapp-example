{
  "module": "commonjs",
  "moduleResolution": "node",
  "lib": ["es5"],
  "compilerOptions": {
    "module": "commonjs", // 指定生成哪个模块系统代码
    "target": "ES5",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "baseUrl": ".",
    "sourceMap": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}